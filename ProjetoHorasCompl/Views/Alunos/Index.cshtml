@model IEnumerable<ProjetoHorasCompl.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h2>@ViewData["Title"]</h2>
<table class= "table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                Nome
            </th>
            <th>
                Matrícula
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AluNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
        }
    </tbody>

</table>

